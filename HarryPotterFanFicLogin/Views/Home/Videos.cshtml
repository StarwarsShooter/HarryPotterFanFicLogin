<script type="text/javascript">
    var ATW = new Date();
    ATW.setFullYear(2020, 4, 1, 6);
    var MTB = new Date();
    MTB.setFullYear(2020, 4, 3, 6);
    var Star = new Date();
    Star.setFullYear(2020, 4, 6, 6);
    var today = new Date();

    function ATW_time(ATW, today) {
        var diff =(today.getTime() - ATW.getTime()) / 1000;
        diff /= (60 * 60 * 24 * 7);
        var diffATW = 125 + Math.abs(Math.floor(diff));
        return diffATW;
    }

    document.getElementById("ATW").innerHTML = ATW_time(ATW, today);

    function MTB_time(MTB, today) {
        var diff = (today.getTime() - MTB.getTime()) / 1000;
        diff /= (60 * 60 * 24 * 7);
        var diffMTB = 63 + Math.abs(Math.floor(diff));
        return diffMTB;
    }

    document.getElementById("MTB").innerHTML = MTB_time(MTB, today);

    function Star_time(Star, today) {
        var diff = (today.getTime() - Star.getTime()) / 1000;
        diff /= (60 * 60 * 24 * 7);
        var diffStar = 43 + Math.abs(Math.floor(diff));
        return diffStar;
    }

    document.getElementById("SH").innerHTML = Star_time(Star, today);
</script>